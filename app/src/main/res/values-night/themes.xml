<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MilesToKmSmartConv" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryBlueDarkVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryBlue</item>
        <item name="colorSecondaryVariant">@color/secondaryBlueLightVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.MilesToKmSmartConv.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Input theme. -->
    <style name="textInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryBlueDarkVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryBlue</item>
        <item name="colorSecondaryVariant">@color/secondaryBlueDarkVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/textColorDarkTheme</item>

        <item name="boxStrokeColor">@color/text_input_box_stroke</item>

        <item name="hintTextColor">@color/secondaryBlueLightVariant</item>
    </style>

    <!-- Text theme. -->
    <style name="textTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryBlueDarkVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryBlue</item>
        <item name="colorSecondaryVariant">@color/secondaryBlueDarkVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.80</item>
    </style>

    <!-- Keypad Theme. -->
    <style name="numberButtons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryBlueDarkVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryBlue</item>
        <item name="colorSecondaryVariant">@color/secondaryBlueDarkVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/secondaryBlue</item>
        <item name="strokeColor">@color/secondaryBlue</item>
        <item name="rippleColor">@color/primaryBlueLightVariant</item>
    </style>


    <!--Launch screen theme-->
    <style name="launchScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>